/* pages/ConfirmOrder/index.wxss */

page {
  background-color: #f5f5f5;
  height: 100%;
}

.container-view {
  background-color: #f5f5f5;
  height: 100%;
  width: 100%;
}

.address-group {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
  background-color: #f5f5f5;
}

.address-content {
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 25rpx 20rpx;
  box-sizing: border-box;
  position: relative;
}

.address-top {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 15rpx;
}

.address-top text {
  font-size: 28rpx;
  color: #000;
  font-weight: bold;
  margin-right: 20rpx;
}

.address-address {
  font-size: 26rpx;
  color: #999;
}

.address-bottom {
  position: absolute;
  bottom: 0;
  left: 32rpx;
  height: 5rpx;
  background: url(data:image/png;base64,) no-repeat center 0;
  width: 95%;
}

.shoplist-group {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
  background-color: #f5f5f5;
}

.footer-control {
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.footer-control-info {
  flex: 1;
  box-sizing: border-box;
  margin-right:20rpx;
}

van-button {
  float: right;
}

.payinfo {
  width: 100%;
  font-size: 28rpx;
  float: right;
  color: #999;
}

.payinfo text {
  float: right;
}

.youhui-info {
  width: 100%;
  font-size: 28rpx;
  float: right;
  color: #999;
}

.youhui-info text {
  float: right;
}

.payPoint {
  font-size: 30rpx;
  color: #ff4c4e;
  font-weight: bold;
}
