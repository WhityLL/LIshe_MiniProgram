/* pages/Home/home.wxss */

page{
  background: #f5f5f5;
}

.container-view{
  width: 100%;
}

.top-group{
  position: relative;
}

.swiper-view image{
  width: 100%;
}

.menu-container-group{
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 11px;
  position: absolute;
  bottom: 0;
}

.menu-container-group .menu-bg-view{
  border-radius: 16rpx;
  background: #fff;

  /* 弹性布局 */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items:center;
}

.menu-container-group .menu-bg-view .menu-item-group{
  margin-top: 5px;
  margin-bottom: 5px;
  text-align: center;
  /* border: 1px solid greenyellow; */
}

.menu-item-group .menu-item-image{
  width: 46px;
  height: 46px;
  margin-top: 5px;
  border-radius: 23px;
}

.menu-item-group .menu-item-title{
  margin-top: 2px;
  height: 40rpx;
}

.middle-top-group{
  padding: 0 30rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx; 
  width: 100%;
  box-sizing: border-box;
}

.middle-top-group .middle-threeitem .middle-threeitem-left{
  width: 50%;
  height: 100%;
  float: left;
}

.middle-top-group .middle-threeitem .middle-threeitem-right{
  float: right;
  width: 50%;
  height: 100%;

  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  flex-direction: column;
  align-items:flex-end;
}

.middle-top-group .middle-oneitem{
  margin-top: 3px;
}

.middle-oneitem image{
  width: 100%;
  height: 100%;
}

.middle-top-group .middle-twoitem{
  margin-top: 3px;
  display: flex;
  justify-content: space-between;
}

.middle-twoitem image{
  width: 100%;
  height: 100%;
}