/* pages/Address/addressList.wxss */

page {
  background: #f5f5f5;
}

.container-view {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.addressItem {
  width: 100%;
  height: 220rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.ul {
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.address-name {
  float: left;
  font-size: 34rpx;
  font-weight: bold;
  color: #000;
}

.address-mobile {
  float: left;
  margin-left: 40rpx;
  font-size: 34rpx;
  color: #000;
}

.defaultAddress {
  float: left;
  margin-left: 20rpx;
  padding: 4rpx 20rpx;
  font-size: 20rpx;
  line-height: 25rpx;
  color: #ff4c4e;
  border: 1rpx solid #ff4c4e;
  border-radius: 25rpx;
  box-sizing: border-box;
}

.address-info-group {
  padding: 0 30rpx;
  padding-top: 30rpx;
  padding-bottom: 15rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.address-group {
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #747474;
}

.address-edit-group {
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  padding-top: 20rpx;
}

van-checkbox {
  font-size: 30rpx;
  line-height: 20rpx;
  width: 200rpx;
  display: inline-block;
  position: relative;
}

van-checkbox image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}

van-checkbox text {
  margin-left: 40rpx;
}

#delete {
  width: 120rpx;
  float: right;
  margin-left: 30rpx;
}

#edit {
  float: right;
  width: 120rpx;
}

.addAddress-group {
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 120rpx;
  background: #fff;
  z-index: 100rpx;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
}

.btn-add {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  background-color: #ff4c4e;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-add image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
