/* pages/Profile/profile.wxss */

page{
  background: #f5f5f5;
}

.top-borderline{
  height: 1px;
  width: 100%;
  background: #ccc;
  background: red;
}

.container-view{
  width: 100%;
}

.container-view .header-group{
  width:  100%;
  height: 410rpx;
  background: #fff;
  box-sizing: border-box;
}

.container-view .header-group .headerview-bgview{
  height: 286rpx;
  width: 100%;
  background: red;
  position: absolute;
} 

.container-view .header-group .headerview-content{
  position: relative; 
  height: 320rpx;
  top: 90rpx;
  margin: 0 32rpx;
  
  border-radius: 16rpx;
  background: pink;
}

.container-view .header-group .headerview-content .headerview-content-top{
  width: 100%;
  height: 198rpx;
  background: white;
}

.container-view .header-group .headerview-content .headerview-content-bottom{
  width: 100%;
  height: 122rpx;
  border-top: 1px solid #999;
  box-sizing: border-box;
  background:#ccc;
}

.container-view .order-group{
  width:  100%;
  height: 260rpx;
  background: #fff;
  margin-top: 30rpx;
  box-sizing: border-box;
}

.container-view .order-group ul{
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.container-view .order-group ul li{
    flex: 1;
    -webkit-box-flex: 1;
}

.container-view .order-group ul li a{
  height: 100%;
  display: block;
  text-align: center;
}

.container-view .order-group ul li div{
  width: 100%;
  height: 50rpx;
  display: block;
  margin: 2px auto;
}

.container-view .order-group ul li div image{
  width: 50rpx;
  height: 50rpx;
}

.container-view .order-group ul li p{
  margin-top: 20rpx;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
} 

.weui-cell-title{
  height: 50rpx;
}

.weui-cell-title p{
  font-size:42rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(16,29,55,1);
  line-height: 50rpx;
}

.weui-cells {
  margin-top: 30rpx;
}

.weui-cells .weui-cell_access{
  font-size: 36rpx;
}

/* 修改系统的样式 改为无边框 */
.weui-cells::before{
  border: none;
}

.weui-cell::before{
  border-top: none;
}

.btn_logout{
  font-size: 38rpx;
  border: none;
  border-radius: 0;
}

.btn_logout::after{
  border: none;
  border-radius: 0;
}