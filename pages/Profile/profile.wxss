/* pages/Profile/profile.wxss */

page {
  background: #f5f5f5;
}

.container-view {
  width: 100%;
}

.header-group {
  width: 100%;
  height: 400rpx;
  /* background: pink; */
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.header-bgview {
  width: 100%;
  background: #ff4c4e;
  height: 270rpx;
  display: block;
}

.header-content {
  height: 300rpx;
  width: 90%;
  position: absolute;
  top: 100rpx;
  left: 5%;
  border-radius: 0.16rem;
  box-shadow: 0px 0px 30rpx rgba(16, 44, 97, 0.15);
  background: #fff;
}

.userinfo-info {
  height: 170rpx;
  width: 100%;
  border-bottom: 1rpx solid #f5f5f5;
  box-sizing: border-box;
  padding: 30rpx;
}

.avatar {
  width: 110rpx;
  height: 110rpx;
  float: left;
  display: flex;
  align-items: center;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  float: left;
  max-width: 72%;
  height: 100%;
  /* border: 1rpx solid #ff4c4e; */
  box-sizing: border-box;
  margin-left: 10rpx;
}

.user-info text {
  display: block;
}

.nikiname {
  font-size: 34rpx;
  color: #000;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 55rpx;
  height: 55rpx;
}

.company {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 55rpx;
  height: 55rpx;
  -webkit-font-smoothing: antialiased;
}

.msg-center-entry {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.msg-center-entry image {
  width: 44rpx;
  height: 44rpx;
}

.msg-center-entry text {
  background: #ff4c4e;
  height: 30rpx;
  line-height: 30rpx;
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  border-radius: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 18rpx;
  font-weight: normal;
  padding: 2rpx 10rpx;
}

.userinfo-msg {
  height: 130rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.userinfo-menuitem {
  text-align: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 25rpx 10rpx;
}

.userinfo-menuitem .userinfo-menuitem-value{
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  display: block;
}

.userinfo-menuitem .userinfo-menuitem-title{
  font-size: 30rpx;
  color: #999;
  display: block;
}

.order-group {
  width: 100%;
  height: 260rpx;
  background: #fff;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.container-view .order-group ul {
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.container-view .order-group ul li {
  flex: 1;
  -webkit-box-flex: 1;
}

.container-view .order-group ul li navigator {
  height: 100%;
  display: block;
  text-align: center;
}

.container-view .order-group ul li div {
  width: 100%;
  height: 50rpx;
  display: block;
  margin: 2px auto;
}

.container-view .order-group ul li div image {
  width: 50rpx;
  height: 50rpx;
}

.container-view .order-group ul li p {
  margin-top: 20rpx;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.weui-cell-title {
  height: 50rpx;
}

.weui-cell-title p {
  font-size: 42rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(16, 29, 55, 1);
  line-height: 50rpx;
}

.weui-cells {
  margin-top: 30rpx;
}

.weui-cells .weui-cell_access {
  font-size: 36rpx;
}

/* 修改系统的样式 改为无边框 */

.weui-cells::before {
  border: none;
}

.weui-cell::before {
  border-top: none;
}

.btn_logout {
  font-size: 38rpx;
  border: none;
  border-radius: 0;
}

.btn_logout::after {
  border: none;
  border-radius: 0;
}
