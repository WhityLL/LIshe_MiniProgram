<!--pages/Profile/profile.wxml-->

<view class='container-view'>
  <view class='header-group'>
    <view class='header-bgview'></view>
    <view class='header-content'>
      <view class='userinfo-info'>
        <view class='avatar'>
          <image src='/images/Profile/pay_ic_logo.png'></image>
        </view>
        <view class='user-info'>
          <text class='nikiname'>{{userInfo.name}}</text>
          <text class='company'>{{userInfo.comName}}</text>
        </view>

        <view class='msg-center-entry'>
          <image src='/images/Profile/home_ic_message.png'></image>
          <text>{{unReadMsgNum}}</text>
        </view>

      </view>
      <view class='userinfo-msg'>

        <navigator class='userinfo-menuitem' url='/pages/JiFen/jifen'>
          <view>
            <text class='userinfo-menuitem-value'>{{points}}</text>
            <text class='userinfo-menuitem-title'>礼舍积分</text>
          </view>
        </navigator>


        <navigator class='userinfo-menuitem'>
          <view>
            <text class='userinfo-menuitem-value'>{{newDepositDetailList.zzgx.balance}}</text>
            <text class='userinfo-menuitem-title'>正章积分</text>
          </view>
        </navigator>


        <navigator class='userinfo-menuitem' url='/pages/Colloction/coloection' open-type='navigate'>
          <view>
            <text class='userinfo-menuitem-value'>{{collectCount}}</text>
            <text class='userinfo-menuitem-title'>收藏商品</text>
          </view>
        </navigator>

      </view>
    </view>
  </view>

  <!-- 我的订单开始 -->
  <view class='order-group'>
    <navigator url='/pages/OrderList/orderList?status=' open-type='navigate'>
      <a class="weui-cell  weui-cell_access" href="javascript::">
        <div class="weui-cell__bd weui-cell-title">
          <p>我的订单</p>
        </div>
        <div class="weui-cell__ft"></div>
      </a>
    </navigator>
    <ul>
      <li>
        <!--  -->
        <navigator url='/pages/OrderList/orderList?status=WAIT_BUYER_PAY' open-type='navigate'>
          <div>
            <image src="/images/Profile/po_icon_pt.png" alt=""></image>
            <text class='tips-order-num' wx:if="{{count.WAIT_BUYER_PAY > 0}}">{{count.WAIT_BUYER_PAY}}</text>
            <!--if-->
          </div>
          <p>待付款</p>
        </navigator>
      </li>
      <li>
        <navigator url='/pages/OrderList/orderList?status=WAIT_SELLER_SEND_GOODS' open-type='navigate'>
          <div>
            <image src="/images/Profile/po_icon_dy.png" alt=""></image>
            <!--if-->
            <text class='tips-order-num' wx:if="{{count.WAIT_SELLER_SEND_GOODS > 0}}">{{count.WAIT_SELLER_SEND_GOODS}}</text>
          </div>
          <p>待发货</p>
        </navigator>
      </li>
      <li>
        <navigator url='/pages/OrderList/orderList?status=WAIT_BUYER_CONFIRM_GOODS' open-type='navigate'>
          <div>
            <image src="/images/Profile/po_icon_goods.png" alt=""></image>
            <!--if-->
            <text class='tips-order-num' wx:if="{{count.WAIT_BUYER_CONFIRM_GOODS > 0}}">{{count.WAIT_BUYER_CONFIRM_GOODS}}</text>
          </div>
          <p>待收货</p>
        </navigator>
      </li>
      <li>
        <navigator url='/pages/OrderList/orderList?status=TRADE_FINISHED' open-type='navigate'>
          <div>
            <image src="/images/Profile/po_icon_refund.png" alt=""></image>
          </div>
          <p>已完成</p>
        </navigator>
      </li>
    </ul>
  </view>
  <!-- 我的订单结束 -->

  <!-- 下边cell开始 -->
  <view class="weui-cells">
    <div class="weui-cell weui-cell-title">
      <div class="weui-cell__bd">
        <p>我的服务</p>
      </div>
    </div>
    <a class="weui-cell weui-cell_access" href="javascript::">
      <view class="weui-cell__hd">
        <image src='/images/Profile/po_icon_assets.png' style="width:20px;height:20px;margin-right:5px;display:block"></image>
      </view>
      <view class="weui-cell__bd">
        <text>我的资产</text>
      </view>
      <view class="weui-cell__ft"></view>
    </a>

    <a class="weui-cell weui-cell_access" href="javascript::">
      <view class="weui-cell__hd">
        <image src='/images/Profile/po_icon_cs1.png' style="width:20px;height:20px;margin-right:5px;display:block"></image>
      </view>
      <view class="weui-cell__bd">
        <text>我的优惠券</text>
      </view>
      <div class="weui-badge" style="margin-right: 5px;">8</div>
      <view class="weui-cell__ft"></view>
    </a>

    <a class="weui-cell weui-cell_access" href="javascript::">
      <view class="weui-cell__hd">
        <image src='/images/Profile/po_icon_cs.png' style="width:20px;height:20px;margin-right:5px;display:block"></image>
      </view>
      <view class="weui-cell__bd">
        <text>我的福利券</text>
      </view>
      <div class="weui-badge" style="margin-right: 5px;">8</div>
      <view class="weui-cell__ft"></view>
    </a>

    <a class="weui-cell weui-cell_access" href="javascript::">
      <view class="weui-cell__hd">
        <image src='/images/Profile/po_icon_pd.png' style="width:20px;height:20px;margin-right:5px;display:block"></image>
      </view>
      <view class="weui-cell__bd">
        <text>修改密码</text>
      </view>
      <view class="weui-cell__ft"></view>
    </a>

    <a class="weui-cell weui-cell_access" href="javascript::">
      <view class="weui-cell__hd">
        <image src='/images/Profile/po_icon_as.png' style="width:20px;height:20px;margin-right:5px;display:block"></image>
      </view>
      <view class="weui-cell__bd">
        <text>地址管理</text>
      </view>
      <view class="weui-cell__ft"></view>
    </a>

    <a class="weui-cell weui-cell_access" href="javascript::">
      <view class="weui-cell__hd">
        <image src='/images/Profile/po_icon_guide.png' style="width:20px;height:20px;margin-right:5px;display:block"></image>
      </view>
      <view class="weui-cell__bd">
        <text>新手引导</text>
      </view>
      <view class="weui-cell__ft"></view>
    </a>

    <a class="weui-cell weui-cell_access" href="javascript::">
      <view class="weui-cell__hd">
        <image src='/images/Profile/po_icon_about.png' style="width:20px;height:20px;margin-right:5px;display:block"></image>
      </view>
      <view class="weui-cell__bd">
        <text>关于礼舍</text>
      </view>
      <view class="weui-cell__ft"></view>
    </a>
  </view>
  <!-- 下边cell结束-->

  <button class='btn_logout' type='warn'>退出登录</button>

</view>