/* pages/SubCate/subCate.wxss */

.container-view{
  width: 100%;
}

.top-group{
  background: #fff;
  height: 60rpx;
  width: 100%;
  padding: 0 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;

  display: flex;
  align-items: center;
}

.top-group .header-group-left{
  height: 60rpx;
  background: #f5f5f5;
  margin-right: 30rpx;
  box-sizing: border-box;
  flex: 1;
  display: flex;
  align-items: center;
  border-radius: 30rpx;
}

.header-group-left input{
  flex: 1;
  height: 60rpx;

  font-size: 26rpx;
  margin-left: 30rpx;
  margin-right: 15rpx;
  box-sizing: border-box;
}

.header-group-left .search-clear{
  flex-basis: 30rpx;
  margin-right: 14rpx;
}

 .top-group .btn-search{
  height: 60rpx;
  flex-basis: 120rpx;
  background: #FF4C4E;
  font-size: 26rpx;
  color: #F3F3F3;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
}

.bottom-group{
  width: 100%;
  background: #fff;
}

.bottom-group .sort-group{
  height: 70rpx;
  /* background: greenyellow; */
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 0 30rpx rgba(81,60,58,0.1);
}

.sort-group .sort-group-item{
  line-height: 70rpx;
  /* background: orange; */
  font-size: 28rpx;
  color: #666666;
  font-weight: bold;
} 

.bottom-group .searchResult-group{
  width: 100%;
  background: #fff;
}

.searchResult-group .searchResult-item{
  /* border: 1rpx solid rebeccapurple; */
  height: 220rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.searchResult-item .searchResult-item-left{
  flex-basis: 180rpx;
  flex-shrink: 0;
  height: 180rpx;
  margin-left: 30rpx;
}

.searchResult-item .searchResult-item-right{
  flex: 1;
  height: 180rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  position: relative;
  /* background: olive; */
}

.goods-text{
  display: -webkit-box;
}

.goods-title{
  overflow:hidden; 
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  font-size: 28rpx;
  font-family:PingFang-SC-Medium;
}

.goods-goodsTags{
  margin-top: 8rpx;
  width: 100%;
  height: 40rpx;
  /* background: orange; */
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.goods-goodsTags text{
  text-align: center;
  display: inline-block;
  line-height: 20rpx;
  font-size: 20rpx;
  border-radius: 20rpx;
  border: 1px solid #FF4C4E;
  color:  #FF4C4E;
  padding: 4rpx 12rpx;
}

.goods-goodsPrice{
  position: absolute;
  bottom: 0;
  font-family: PingFang-SC-Bold;
  font-size: 28rpx;
  font-weight: bold;
  color: #FF4C4E;
  overflow:hidden; 
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1; 
}

.searchResult-empty{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
}