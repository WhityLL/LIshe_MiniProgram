/* pages/Categary/categary.wxss */

page{
  height: 100%;
  margin: 0;
  padding: 0;
}

view{
  margin: 0;
  padding: 0;
  font-size: 0;
}

.container-view{
  width: 100%;
  display: flex;
}

.container-view .left-group{
  flex-basis: 180rpx;
  background: #fff;
  display: inline-block;  
 
}

.left-group .scroll-left{
  width: 100%;
  text-align: center; 
}

.left-group .scroll-left .nav_left_items{
  height: 100rpx;  
  line-height: 100rpx;  
  padding: 0 5px;   
  box-sizing: border-box; 

  border-bottom: 1px solid #dedede;   
  font-size: 13px; 
  white-space: nowrap;
}

/*左侧栏list的item被选中时*/  
.left-group .scroll-left .active{  
  background: #fff;  
  color: #f0145a; 
}  


/* ======================== */
.container-view .scroll_right{
  background: #fff;

  border-left: 1px solid #e6e6e6;
}

.scroll_right .search-group{
  height: 70rpx;
  background: #f5f5f5;
  margin: 30rpx;
  box-sizing: border-box;
  border-radius: 35rpx;
}

.search-group-bg{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.scroll_right .search-group .input-class{
  flex: 1;
  height: 100%;
  
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-right: 15rpx;
  box-sizing: border-box;
}

.search-clear{
  flex-basis: 30rpx;
  margin-right: 14rpx;
}

.scroll_right .scroll-content{
  margin: 0 30rpx;
  background: pink;
 /* 弹性布局 */
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}

.scroll_right .nav_right_items{
  height: 100px;  
  width: 33.33%;
  margin-top: 10rpx;

  text-align: center;  
  font-size: 13px;
  border: 1px solid orange;
  box-sizing: border-box;
}

.scroll_right .nav_right_items image{  
  /*被图片设置宽高*/  
  width: 60px;  
  height: 60px;  
  margin-top: 10px;  
} 

.scroll_right .nav_right_items text{  
  /*给text设成块级元素*/  
  display: block;  
  margin-top: 2px;  
  font-size: 26rpx;  
  color: black;

  /*设置文字溢出部分为...*/  
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
} 

.nodata_text{
  color: black;
  margin-top: 15px;
  font-size: 32rpx;  
  text-align: center;  
}