/* pages/Categary/categary.wxss */

.container-view{
  width: 100%;
  height: 100%;
  background: #fff;
}

.left-group {
  width: 180rpx;
  border-right: 1rpx solid #e6e6e6;
  position: absolute;
  top: 0;
  left: 0; 
  text-align: center;
  box-sizing: border-box;
  overflow-x: hidden;
}

.left-group .main-cate-item{
  width: 100%;
  height: 100rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  padding-top:25rpx;
  color: #333;
  box-sizing: border-box;
}

.main-cate-item text{
  line-height: 50rpx;
  font-size: 28rpx;
  display: block;
  cursor: pointer;
  box-sizing: border-box;
}

.active{
  color: #fff;
  background: #ff4c4e;
  border-radius: 30rpx;
}

.right-group{
  width: 570rpx;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0; 
  /* text-align: center; */
  overflow-x: hidden;
}