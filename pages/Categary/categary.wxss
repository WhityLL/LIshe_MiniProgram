/* pages/Categary/categary.wxss */
page{
  height: 100%
}

.container-view{
  width: 100%;
  height: 100%;
  background: #fff;
}

.left-group {
  width: 180rpx;
  height: 100%;
  border-right: 1rpx solid #e6e6e6;
  text-align: center;
  box-sizing: border-box;
  overflow-x: hidden;
}

.left-group .main-cate-item{
  width: 100%;
  height: 100rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  padding-top:25rpx;
  color: #333;
  box-sizing: border-box;
}

.main-cate-item text{
  line-height: 50rpx;
  font-size: 28rpx;
  display: block;
  cursor: pointer;
  box-sizing: border-box;
}

.active{
  color: #fff;
  background: #ff4c4e;
  border-radius: 30rpx;
}

.right-group{
  width: 570rpx;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0; 
  overflow-x: hidden;
}

.right-group .search-group{
  height: 70rpx;
  background: #f5f5f5;
  margin: 30rpx;
  box-sizing: border-box;
  border-radius: 35rpx;
}

.search-group .search-group-bg{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.search-group-bg input{
  flex: 1;
  height: 100%;
  font-size: 26rpx;
  margin-left: 30rpx;
  margin-right: 15rpx;
  box-sizing: border-box;
}

.search-clear{
  flex-basis: 30rpx;
  margin-right: 30rpx;
}