/* pages/Cart/cart.wxss */

page {
  background: #f5f5f5;
}

/* 主体 */

.container-view {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
  margin: 90rpx auto;
}

/* 顶部 */

.cart-headerView {
  width: 100%;
  height: 60rpx;
  position: fixed;
  top: 0;
  z-index: 100;
  background: burlywood;
}

/* 中间 */

.cart-wrap {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

/* section */

.section {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  padding: 4rpx 16rpx;
  box-sizing: border-box;
}

/* sectionHeader 正常的头部 */

.section-header-normal {
  width: 100%;
  height: 80rpx;
  background: blanchedalmond;
}

/* 底部 */

.cart-footer {
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  z-index: 100;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow: 0px 0px 30rpx 0 rgba(16, 44, 97, 0.1);
}

.footer-left {
  height: 100%;
  width: 22%;
  float: left;
  /* border: 1rpx solid orange; */
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.footer-left checkBoxA {
  display: inline-block;
}

.footer-left text {
  display: inline-block;
  font-size: 30rpx;
}

.footer-right {
  height: 100%;
  width: 78%;
  float: right;
  padding: 10rpx 0;
  /* border: 1rpx solid orchid; */
  box-sizing: border-box;
}

.footer-btn {
  width: 200rpx;
  height: 100%;
  border-radius: 70rpx;
  background: red;
  font-size: 32rpx;
  color: #fff;
  float: right;
  text-align: center;
  line-height: 72rpx;
}

/* 总价等说明 */
.btn-totalInfo {
  height: 100%;
  float: right;
  margin-right: 20rpx;
  /* border: 1rpx solid yellow; */
  box-sizing: border-box;
}

/* 总价 */
.totalInfo-price{
  width: 100%;
  height: 55%;
  font-size: 28rpx;
  color: red;
  text-align: right;
  line-height: 50rpx;
  /* background: olivedrab; */
}

#total-title{
  color: #333;
}

.totalInfo-desc{
  width: 100%;
  height: 45%;
  font-size: 24rpx;
  color: #666;
  text-align: right;
  line-height:34rpx;
/* background: yellowgreen; */
}
