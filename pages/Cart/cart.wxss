/* pages/Cart/cart.wxss */

page {
  background: #f5f5f5;
}

/* 主体 */

.container-view {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
  margin: 90rpx auto;
}

/* 顶部 */

.cart-headerView {
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  position: fixed;
  top: 0;
  z-index: 100;
  background: #ffeaea;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-headerView text {
  font-size: 24rpx;
  color: #ff4c4e;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  word-break: break-all;
  line-height: 60rpx;
}

.cart-headerView image {
  width: 22rpx;
  height: 70rpx;
}

/* 中间 */

.cart-wrap {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

/* section */

.section {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  padding: 4rpx 16rpx;
  box-sizing: border-box;
}

/* sectionHeader 正常的头部 */

.section-header-normal {
  width: 100%;
  height: 80rpx;
  /* background: blanchedalmond; */
  font-size: 24rpx;
}

.section-header-left {
  height: 100%;
  float: left;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 6rpx;
}

.section-header-normal checkBoxA {
  display: inline-block;
}

.section-header-shop {
  height: 100%;
  font-size: 24rpx;
  /* border: 1rpx solid rebeccapurple; */
  box-sizing: border-box;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 6rpx;
}

.section-header-shop image {
  margin: auto 8rpx;
  width: 26rpx;
  height: 26rpx;
}

.section-header-choudan {
  height: 100%;
  margin-left: 50rpx;
  font-size: 24rpx;
  float: right;
  line-height: 80rpx;
  box-sizing: border-box;
  color: #ff4c4e;
  /* border: 1rpx solid palegreen; */
}

/* 底部 */

.cart-footer {
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  z-index: 100;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow: 0px 0px 30rpx 0 rgba(16, 44, 97, 0.1);
}

.footer-left {
  height: 100%;
  width: 22%;
  float: left;
  /* border: 1rpx solid orange; */
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.footer-left checkBoxA {
  display: inline-block;
}

.footer-left text {
  display: inline-block;
  font-size: 30rpx;
}

.footer-right {
  height: 100%;
  width: 78%;
  float: right;
  padding: 10rpx 0;
  /* border: 1rpx solid orchid; */
  box-sizing: border-box;
}

.footer-btn {
  width: 200rpx;
  height: 100%;
  border-radius: 70rpx;
  background: red;
  font-size: 32rpx;
  color: #fff;
  float: right;
  text-align: center;
  line-height: 80rpx;
}

/* 总价等说明 */

.btn-totalInfo {
  height: 100%;
  float: right;
  margin-right: 20rpx;
  /* border: 1rpx solid yellow; */
  box-sizing: border-box;
}

/* 总价 */

.totalInfo-price {
  width: 100%;
  height: 55%;
  font-size: 28rpx;
  color: red;
  text-align: right;
  line-height: 50rpx;
  /* background: olivedrab; */
}

#total-title {
  color: #333;
}

.totalInfo-desc {
  width: 100%;
  height: 45%;
  font-size: 24rpx;
  color: #666;
  text-align: right;
  line-height: 34rpx;
  /* background: yellowgreen; */
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
}

.cell {
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .cell, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
