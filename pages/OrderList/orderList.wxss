/* pages/OrderList/orderList.wxss */

.order-list {
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
}

.order-empty {
  width: 100%;
  height: 100%;
  color: #999;
  font-size: 28rpx;
  text-align: center;
  background: #fff;
  box-sizing: border-box;
}

.order-empty image{
  width: 400rpx;
  height: 300rpx;
  margin: 110rpx auto;
  margin-bottom: 40rpx;
  display: block;
}

.section{
  width: 100%;
  background: lightgoldenrodyellow;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  padding: 4rpx 16rpx;
  box-sizing: border-box;
}

.section-header{
   width: 100%;
  height: 80rpx;
  background: blanchedalmond;
  font-size: 24rpx;
}

.section-header-left{
   height: 100%;
  float: left;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 6rpx;
}

.section-header-shop {
  height: 100%;
  font-size: 24rpx;
  border: 1rpx solid rebeccapurple;
  box-sizing: border-box;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 6rpx;
}

.section-header-shop image {
  margin: auto 8rpx;
  width: 26rpx;
  height: 26rpx;
}

.section-header-status{
  height: 100%;
  margin-left: 50rpx;
  font-size: 24rpx;
  float: right;
  line-height: 80rpx;
  box-sizing: border-box;
  color: #ff4c4e;
  border: 1rpx solid palegreen;
}