/* pages/OrderList/orderList.wxss */

page {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
}

.container-view {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
  margin-top: 100rpx;
}

segmentView{
  width: 100%;
  position: fixed;
  opacity: 1;
  zoom: 1;
  top: 0;
  z-index: 100;
  background:#fff;
}

.order-list {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  box-sizing: border-box;
}

.order-empty {
  width: 100%;
  height: 100%;
  color: #999;
  font-size: 28rpx;
  text-align: center;
  background: #f5f5f5;
  box-sizing: border-box;
}

.order-empty image {
  width: 400rpx;
  height: 300rpx;
  margin: 110rpx auto;
  margin-bottom: 40rpx;
  display: block;
}

.section {
  width: 100%;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.section-header {
  width: 100%;
  height: 60rpx;
  background: #fff;
  font-size: 24rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.section-header-left {
  height: 100%;
  float: left;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-header-shop {
  height: 100%;
  font-size: 24rpx;
  /* border: 1rpx solid rebeccapurple; */
  box-sizing: border-box;
  line-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-header-shop image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 16rpx;
}

.section-header-status {
  height: 100%;
  margin-left: 50rpx;
  font-size: 24rpx;
  float: right;
  line-height: 60rpx;
  box-sizing: border-box;
  color: #ff4c4e;
  /* border: 1rpx solid palegreen; */
}

.moreProductCell {
  width: 100%;
  height: 180rpx;
  /* border: 1prx solid #ff4c4e; */
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}

.moreProductCell image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  margin-top: 15rpx;
}

.section-footer {
  background: #fff;
  width: 100%;
  height: 80rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.section-footer .van-button {
  height: 60rpx;
  line-height: 58rpx;
}

.noMoreTips {
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}
