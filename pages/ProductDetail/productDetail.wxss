/* pages/ProductDetail/productDetail.wxss */

page {
  width: 100%;
  overflow: auto;
}

.container-view {
  width: 100%;
  height: 100%;
  overflow: auto;
  background: #f5f5f5;
  position: relative;
  margin-bottom:28rpx;
}

/* *************** segment ****************** */

.navi {
  background: #fff;
  width: 100%;
  height: 70rpx;
  position: fixed;
  top: 0;
  z-index: 10;
  box-shadow: 0 0 30rpx rgba(81, 60, 58, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  padding: 0 100rpx;
  box-sizing: border-box;
}

.navi .navi-item {
  text-align: center;
  width: 100rpx;
  height: 100%;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

/* ********************  轮播图 ********************** */

.swiper-view {
  width: 100%;
  height: 750rpx;
  margin-top: 70rpx;
}

.swiper-view image {
  width: 100%;
  height: 100%;
}

/* ********************* 商品信息  ******************** */

.sction {
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.info-group {
  padding: 20rpx;
  box-sizing: border-box;
}

.info-price {
  font-size: 40rpx;
  color: #ff4c4e;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.info-desc {
  line-height: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
  font-size: 30rpx;
  vertical-align: top;
  margin-bottom: 10rpx;
}

.info-shop {
  font-size: 26rpx;
  color: #666;
}

.singleLine {
  height: 88rpx;
  width: 100%;
}

.content-content {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  line-height: 48rpx;
  text-align: left;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.content-blod {
  font-weight: bold;
}

.content-content .tags {
  height: 100%;
  display: inline-block;
  margin-right: 16rpx;
  position: relative;
}

.tags image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 6rpx;
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
}

.tags text {
  font-size: 20rpx;
  color: #999;
  margin-left: 36rpx;
}

/* ****************  详细介绍   ****************** */

.detail-header {
  background: #fff;
  width: 100%;
  height: 88rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  font-weight: bold;
  text-align: left;
}

.article {
  width: 100%;
  height: 100%;
}

.article .rich-img {
  width: 100%;
  height: auto;
}

/* ****************  底部  ********************** */

.footer-control {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 14rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0px 0px 0.30rpx 0 rgba(16, 44, 97, 0.2);
}

.footer-btn1 {
  text-align: center;
  width: 80rpx;
  height: 100%;
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.footer-btn1-top {
  width: 100%;
  height: 100%;
  font: 12rpx;
  position: relative;
}

.footer-btn1-top image {
  width: 38rpx;
  height: 38rpx;
}

.footer-btn1-top .cart-num {
  display: inline-block;
  position: absolute;
  right: 10rpx;
  top: -4rpx;
  background: #ff4c4e;
  text-align: center;
  border-radius: 50%;
  color: #fff;
  font-size: 18rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
}

.footer-btn1-title {
  width: 100%;
  flex-basis: 20rpx;
  font-size: 20rpx;
}

.footer-btnAdd {
  color: #fff;
  height: 100%;
  padding: 0 35rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: bold;
  background-color: rgb(255, 173, 76);
  line-height: 64rpx;
  border-radius: 35rpx;
}

.footer-btnBuy {
  color: #fff;
  height: 100%;
  padding: 0 35rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 20rpx;
  background-color: rgb(255, 76, 78);
  line-height: 64rpx;
  border-radius: 35rpx;
}
