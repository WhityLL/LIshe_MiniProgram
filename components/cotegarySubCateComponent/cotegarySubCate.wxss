/* components/cotegarySubCateComponent/cotegarySubCate.wxss */

.floor{
  width: 100%;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.floor .floor-headergroup{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.floor .floor-itemgroup{
  width: 100%;
  text-align: center;
  display: flex;
  justify-content: start;
  align-content: left;
  flex-wrap: wrap;
  flex-direction:row;
}

.floor-itemgroup .floor-item{
  /* border:1px solid red; */
  box-sizing: border-box;
  width: 33.33%;
  height: 200rpx;
  text-align: center;
  padding: 10rpx;
  margin-bottom: 20rpx;
  
}

.floor-item image{
  width: 100%;
  height: 140rpx;
  display: block;
}

.floor-item text{
  display: block;
  margin-top: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color: #333;
  font-size: 24rpx;
}