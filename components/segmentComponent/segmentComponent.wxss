/* components/segmentComponent/segmentComponent.wxss */

.segment-group {
  width: 100%;
  height: 80rpx;
  box-shadow: 0px 0px 60rpx rgba(16, 44, 97, 0.15);
}

.segment-item {
  float: left;
  color: #191414;
  cursor: pointer;
  font-size: 28rpx;
  width: 20%;
  text-align: center;
  line-height: 80rpx;
}

.active {
  border-bottom: #ff4138 solid 2px;
  color: #ff4138;
}
